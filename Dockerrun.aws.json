{
  "AWSEBDockerrunVersion": "2",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "angelahjk25/agendaally-backend:latest",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "hostPort": 8080,
          "containerPort": 8080
        }
      ],
      "environment": [
        {
          "name": "DB_URL",
          "value": "${DB_URL}"
        },
        {
          "name": "DB_USER",
          "value": "${DB_USER}"
        },
        {
          "name": "DB_PASSWORD",
          "value": "${DB_PASSWORD}"
        }
      ]
    },
    {
      "name": "frontend",
      "image": "angelahjk25/agendaally-frontend:latest",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "hostPort": 3000,
          "containerPort": 3000
        }
      ]
    },
    {
      "name": "db",
      "image": "mysql:8.0",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "hostPort": 3306,
          "containerPort": 3306
        }
      ],
      "environment": [
        {
          "name": "MYSQL_DATABASE",
          "value": "webapp_db"
        },
        {
          "name": "MYSQL_USER",
          "value": "${DB_USER}"
        },
        {
          "name": "MYSQL_PASSWORD",
          "value": "${DB_PASSWORD}"
        }
      ]
    }
  ]
}
